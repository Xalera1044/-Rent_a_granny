<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1634089916298-9fa27180526c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container ">
    <h1>Rent a <strong>Granny!</strong></h1>
    <p>Everyone come and get your granny</p>
    <%= link_to "Find a Granny", grannies_path, class: "btn btn-lg btn-success" %>
  </div>
</div>


<div class="container">
<h2 class="d-flex justify-content-center mt-5 mb-5 ">Top 3 Grannies this week 👵🏻</h2>
  <div class="cards">
      <% @grannies.each do | granny | %>
        <%= link_to granny_path(granny.id), class: "text-decoration-none text-dark" do %>
          <div class="card-bookmark">
            <img src= <%= granny.image_url %>>
            <div class="card-bookmark-infos p-2">
              <div>
                <h3 class="mb-4"><%= granny.first_name %> (<%= granny.age %>)</h3>
                <p class="mb-3"><strong><%= granny.price_per_day %> EUR</strong> per day</p>
                <p class="pb-3"><%= granny.description %></p>
              </div>
              <p class="card-rating"><%= rand(6.0..10).round(1) %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
