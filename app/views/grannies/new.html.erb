<div class="d-flex justify-content-center ">
  <div class="formcard">
    <h2 class="mb-5"> Create your Granny </h2>
    <%= simple_form_for [@granny] do |f| %>
      <%= f.input :first_name, label: "Your first name"%>
      <%= f.input :last_name, label: "Your last name"%>
      <%= f.input :age, label: "Your age" %>
      <%= f.input :description, label: "A little description of yourself"%>
      <%= f.input :photo, as: :file, label: "Add an image of yourself" %>
      <%= f.input :baking_skill, label: "Baking skill", collection: 0..10,  as: :radio_buttons %>
      <%= f.input :lullaby_skill, label: "Lullaby skill", collection: 0..10,  as: :radio_buttons %>
      <%= f.input :storytelling_skill, label: "Storytelling skill", collection: 0..10, as: :radio_buttons %>
      <%= f.input :availability, label: "Your availability"%>
      <%= f.input :price_per_day, label: "Your price per day (in EUR)"%>
      <%= f.submit class:"btn-flat"%>
    <% end %>
  </div>
</div>
